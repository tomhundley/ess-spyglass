{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.elegantsoft.spyglass",
  "productName": "Spyglass",
  "copyright": "Copyright Â© 2025 Elegant Software Solutions, Inc.",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*"
  ],
  "extraResources": [
    {
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "resources/icon.icns",
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": ["nsis", "zip"],
    "icon": "resources/icon.ico"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "resources/icon.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "publish": {
    "provider": "github",
    "owner": "tomhundley",
    "repo": "spyglass"
  }
}
